<div class="jumbotron">
  <h1 class="display-4"><%= t 'title.edit', model: t('activerecord.models.ingredient.one') %></h1>
  <hr class="my-4">
  <%= link_to t('button.show_model', model: t('activerecord.models.ingredient.one')), @ingredient, class: "btn btn-outline-info btn-lg btn-block" %>
  <% if @ingredient.destroyable? %>
    <%= link_to t('button.delete_model', model: t('activerecord.models.ingredient.one')),
                @ingredient,
                method: :delete,
                data: {confirm: t('other.delete_confirm')},
                class: 'btn btn-outline-danger btn-lg btn-block'
    %>
  <% end %>
  <%= link_to t('button.back_to_all'), ingredients_path, class: "btn btn-outline-primary btn-lg btn-block" %>
</div>

<%= render 'form', ingredient: @ingredient %>
