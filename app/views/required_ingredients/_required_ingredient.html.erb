<div class="col-sm-4" style="padding: 15px;">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= link_to required_ingredient.ingredient.name, required_ingredient.ingredient %></h5>
      <h6 class="card-subtitle mb-2 text-muted">
        <%=
          "#{number_with_precision(required_ingredient.converted_amount, strip_insignificant_zeros: true)}
          #{required_ingredient.unit.symbol}"
        %>
      </h6>
    </div>
    <% if current_user == @recipe.user || current_user.try(:admin?) %>
      <div class="card-footer">
        <%= link_to t('button.edit'),
                    edit_recipe_required_ingredient_path(@recipe, required_ingredient),
                    class: "btn btn-outline-secondary"
        %>
        <%= link_to t('button.delete'),
                    recipe_required_ingredient_path(@recipe, required_ingredient),
                    method: :delete,
                    data: {confirm: 'Are you sure?'},
                    class: 'btn btn-outline-danger'
        %>
      </div>
    <% end %>
  </div>
</div>
