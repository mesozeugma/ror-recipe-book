<div class="col-sm-4" style="padding: 15px;">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">
        <%= link_to unit_category.name, unit_category %>
        <span class="badge badge-primary"><%= unit_category.unit_conversions_count %></span>
      </h5>
    </div>
    <div class="card-footer">
      <%= link_to t('button.edit'), edit_unit_category_path(unit_category), class: "btn btn-outline-secondary" %>
      <% if unit_category.destroyable? %>
        <%= link_to t('button.delete'),
                    unit_category,
                    method: :delete,
                    data: {confirm: t('other.delete_confirm')},
                    class: 'btn btn-outline-danger'
        %>
      <% end %>
    </div>
  </div>
</div>
