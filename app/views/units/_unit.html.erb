<div class="col-sm-4" style="padding: 15px;">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">
        <%= link_to unit.name, unit %>
        <span class="badge badge-primary"><%= unit.unit_conversions_count %></span>
      </h5>
      <h6 class="card-subtitle mb-2 text-muted"><%= unit.symbol %></h6>
    </div>
    <div class="card-footer">
      <%= link_to t('button.edit'), edit_unit_path(unit), class: "btn btn-outline-secondary" %>
      <% if unit.destroyable? %>
        <%= link_to t('button.delete'),
                    unit,
                    method: :delete,
                    data: {confirm: t('other.delete_confirm')},
                    class: 'btn btn-outline-danger'
        %>
      <% end %>
    </div>
  </div>
</div>
